<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Themes">
	<attr name="waveViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="DeviceCardView">
        <attr name="extra_title" format="string|reference"/>
    </declare-styleable>
	
	<style name="CherishPreferenceFullCard">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/cherish_pref_full</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CherishPreferenceTopCard">
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/cherish_pref_top</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CherishPreferenceMiddleCard">
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">-1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/cherish_pref_middle</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="CherishPreferenceBottomCard">
	    <item name="android:layout_marginTop">-1dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/cherish_pref_bottom</item>
        <item name="android:clipToPadding">false</item>
    </style>
	
	<style name="LockPatternSizeHeaderStyle" parent="android:style/TextAppearance.Material.Subhead">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/primary_dark_material_light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
	
	<style name="PreferenceTheme" parent="@style/PreferenceThemeOverlay.SettingsBase">
        <item name="customPreferenceStyle">@style/CustomPreference</item>
    </style>

    <style name="CustomPreference" parent="Preference.Material">
        <item name="allowDividerAbove">false</item>
    </style>
	
	<style name="TextAppearance.CherishInfoTitle">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CherishInfoSummary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:fontFamily">sans-serif-book</item>
    </style>

    <style name="op_control_text_style_base">
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="op_control_text_style_body1" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_bodyFontFamily</item>
    </style>

    <style name="op_control_text_style_h6" parent="@style/op_control_text_style_base">
        <item name="android:textSize">16.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="op_control_text_style_subtitle" parent="@style/op_control_text_style_base">
        <item name="android:textSize">13.0sp</item>
        <item name="android:fontFamily">@*android:string/config_lightFontFamily</item>
    </style>
</resources>
