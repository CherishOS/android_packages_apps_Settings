<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/android_version_details"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/custom_preference_background"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/android_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="36dp"
                style="@style/mtx_text_style_h6"
                android:textColor="@color/mtx_text_color_primary"
                android:textSize="18sp"
                android:text="@string/firmware_version"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/android_version_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginStart="36dp"
                android:layout_below="@+id/android_version"
                android:layout_marginTop="2dp"
                style="@style/mtx_text_style_body1"
                android:textColor="@color/mtx_text_color_secondary"/>

            <ImageView
                android:id="@+id/android_logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/android_version_logo"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

</RelativeLayout>
