<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/cherish_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/phone_image"
        android:layout_width="100dp"
        android:layout_height="205dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="72dp"
        android:src="@drawable/cherish_gradient_phone"
        android:antialias="true"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/phone_image">

        <TextView
            android:id="@+id/version_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/cherish_version_title"
            style="@style/TextAppearance.CherishInfoTitle" />

        <TextView
            android:id="@+id/version_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.CherishInfoSummary" />

        <TextView
            android:id="@+id/version_code_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/cherish_version_code_title"
            style="@style/TextAppearance.CherishInfoTitle" />

        <TextView
            android:id="@+id/version_code_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.CherishInfoSummary" />

        <TextView
            android:id="@+id/release_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/cherish_release_type_title"
            style="@style/TextAppearance.CherishInfoTitle" />

        <TextView
            android:id="@+id/release_type_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            style="@style/TextAppearance.CherishInfoSummary" />

        <TextView
            android:id="@+id/maintainer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/cherish_maintainer_title"
            style="@style/TextAppearance.CherishInfoTitle" />

        <TextView
            android:id="@+id/maintainer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.CherishInfoSummary" />

    </LinearLayout>
</RelativeLayout>
